@model MyBudgetPlanner.Models.ExpensePlanMaster

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
    ViewBag.activeTabName = "myexpensesMaster";
}



<div class="content">
    <div class="card">
        <div class="card-body">
            <h5>ExpenseMaster</h5>
            <hr />


            <form asp-action="Create">
                <input type="hidden" asp-for="CreatedDate" class="form-control" />
                <input type="hidden" asp-for="UniqueId" class="form-control" />
                <input type="hidden" asp-for="UserId" class="form-control" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-md-4 ">
                        <label asp-for="ExpenseName" class="control-label"></label>
                        <input asp-for="ExpenseName" autocomplete="off" class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-md-4 ">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-md-4">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                      <div class="form-group form-check">
                          <label class="form-check-label">
                               <input class="form-check-input" asp-for="IsMandatory" /> @Html.DisplayNameFor(model => model.IsMandatory)
                          </label>
                       </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>



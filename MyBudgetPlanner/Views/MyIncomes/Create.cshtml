@model MyBudgetPlanner.Models.Income

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
}


<style>
    .month{

        margin-left:0px;
    }


</style>
<div class="content">
    <div class="card">
        <div class="card-body">
<h3 class="">Create</h3>

<h5>Income</h5>
<hr />

        <form asp-action="Create">

            <input type="hidden" asp-for="UniqueId" />
            <input type="hidden" asp-for="UserId"/>

             <div class="row">
                         
            <div class="form-group col-md-4">
                <label asp-for="IncomeSource" class="control-label"></label>
                <input asp-for="IncomeSource" class="form-control" />
                <span asp-validation-for="IncomeSource" class="text-danger"></span>
            </div>

                            <div class="form-group col-md-4">
                <label asp-for="IncomeDiscription" class="control-label"></label>
                <input asp-for="IncomeDiscription" class="form-control" />
                <span asp-validation-for="IncomeDiscription" class="text-danger"></span>
            </div>
                            <div class="form-group col-md-4">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            </div>
            <div class="row">
                 <div class="form-group col-md-4">
                <label asp-for="Month" class="control-label"></label>
                <select asp-for="Month" class="form-control">
                    <option>Jan</option>
                     <option>Feb</option>
                     <option>March</option>
                     <option>April</option>
                      <option>May</option>
                     <option>June</option>
                     <option>July</option>
                     <option>Aug</option>
                     <option>Sep</option>
                     <option>Oct</option>
                     <option>Nov</option>
                     <option>Dec</option>
                              
                </select>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>

                    <div class="form-group col-md-4">
                <label asp-for="Year" class="control-label"></label>
                <select asp-for="Year" class="form-control">
                    <option>2020</option>
                     <option>2021</option>
                     <option>2022</option>
                      <option>2023</option>
                      <option>2024</option>

                    </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
                    <div class="form-group form-check col-md-4 mt-5 month ">
                <label class="form-check-label">
                    <input class="form-check-input " asp-for="IsPerMonth" /> Is PerMonth
                </label>
            </div>
          </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>


                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
        </form>
    </div>
</div>


</div>


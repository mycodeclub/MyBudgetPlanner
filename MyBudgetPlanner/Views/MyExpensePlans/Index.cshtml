@model IEnumerable<MyBudgetPlanner.Models.MyExpensePlan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-body">

            <h1>Index</h1>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpenseTags)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Discription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsMandatory)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpenseTags)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsMandatory)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UniqueId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.UniqueId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.UniqueId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
